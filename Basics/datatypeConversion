//conversion of number to string
let marks =  78;

console.log (typeof marks);

let value = String(marks);

console.log (typeof value);
console.log(value);
console.log("\n");

//converting boolean to number
let a =  true;

console.log (typeof a);

let b = Number(a);

console.log (typeof b);
console.log(b);
console.log("\n");

//converting string to number
let str = "1234";  

console.log (typeof str);

let num = Number (str);

console.log (typeof num);
console.log (num);
console.log("\n");
/*
similarly we can convert other datatypes too using
String() function to convert to string datatype
Number() function to convert to number datatype
Boolean() function to convert to boolean datatype
*/

console.log ("1" + 2) //here string concatenation happens because it is treated as string 
console.log (1 + "2") //here also string concatenation happens because it is treated as string because there is nothing to add in first element
console.log("1" + 2 + 3) //here also string concatenation happens because it is treated as string because first element is string
console.log(1 + 2 + "3") //here addition happens first and then string concatenation becaue there is 2 to add with first element
console.log("\n");

